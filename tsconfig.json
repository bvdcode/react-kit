{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "isolatedModules": true,
    "types": []
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
